@model List<Sistema_MVC_Mamani.Models.Semestre>
@{
    ViewBag.Title = "Index";
}

<h2 class="card text-center">Gestion de semestres</h2>

<div class="text-right">
    <a href="~/semestre/agregareditar" class="btn btn-secondary text-right" >
        Nuevo registro
    </a> 
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th style="width:50px">Id</th>
            <th style="width:100px">Semestre</th>
            <th style="width:70px">Año</th>
            <th style="width:80px">Estado</th>
            <th style="width:150px" align="center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            <tr>
                <th>@(s.semestre_id)</th>
                <th>@(s.nombre)</th>
                <th>@(s.anio)</th>
                <th>@(s.estado)</th>
                <th style="align-content:center">
                    <a href="~/semestre/visualizar/@s.semestre_id" class="btn btn-warning">Visualizar</a>
                    <a href="~/semestre/agregareditar/@s.semestre_id" class="btn btn-primary">Modificar</a>
                    <a href="~/semestre/eliminar/@s.semestre_id" class="btn btn-danger" onclick="return confirm('¿Estas seguro de eliminar... ?');">Eliminar</a>

                </th>
            </tr>
        }
    </tbody>
</table>


























