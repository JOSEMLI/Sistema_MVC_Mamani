@model List<Sistema_MVC_Mamani.Models.Asignacion>
@{
    ViewBag.Title = "Index";
}

<h2 class="card text-center">Gestion de Asignacion</h2>

<div class="text-right">
    <a href="~/asignacion/agregareditar" class="btn btn-secondary text-right">
        Nuevo registro
    </a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th style="width:50px">Id</th>
            <th style="width:60px">Semestre</th>
            <th style="width:80px">Titulo</th>
            <th style="width:50px">Fecha Creacion</th>
            <th style="width:40px">Estado</th>
            <th style="width:200px" align="center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <th>@(a.asignacion_id)</th>
                <th>@(a.Semestre.nombre)</th>
                <th>@(a.titulo)</th>
                <th>@(a.fecharegistro)</th>
                <th>@(a.estado)</th>
                <th style="align-content:center">
                    <a href="~/asignacion/visualizar/@a.asignacion_id" class="btn btn-warning">Visualizar</a>
                    <a href="~/asignacion/agregareditar/@a.asignacion_id" class="btn btn-primary">Modificar</a>
                    <a href="~/asignacion/eliminar/@a.asignacion_id" class="btn btn-danger" onclick="return confirm('¿Estas seguro de eliminar... ?');">Eliminar</a>

                </th>
            </tr>
        }
    </tbody>
</table>

