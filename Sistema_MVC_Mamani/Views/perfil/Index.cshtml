@model Sistema_MVC_Mamani.Models.Usuario
@{
    ViewBag.Title = "Index";
}

<div id="yo" class="page">
    <h2 class="card-header"> Mi perfil Personal</h2>

</div>
@using (Html.BeginForm("actualizar", "perfil", FormMethod.Post))
{
    <div>
        <div class="card-body">
            <div role="tabpanel" class="active" id="info">
                Informacion de Usuario
            </div>

            <div class="form-group">
                @Html.HiddenFor(x => x.usuario_id)
                @Html.Label("usuario")
                @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "text-danger" })

                <img src="~/fotousu/@Model.avatar" width="105" height="135" />

            </div>
            <div class="form-group">
                <label>Foto: </label>
                <input type="file" name="Foto" />
            </div>
        </div>
    </div>
    <br />
    <div class="text-right">
        <button data-ajax="true" class="btn btn-primary">Grabar</button>
        <a href="~/demo" class="btn btn-danger">Cancelar</a>

    </div>

}